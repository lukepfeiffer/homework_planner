%tr
  %td.col-md-2= course.name
  %td.col-md-2= course.teacher_name
  %td.col-md-2= course.assignments.count
  %td.col-md-4
    = course.start_time.strftime('%I:%M %p') + ' - '
    = course.end_time.strftime('%I:%M %p')
  %td.col-md-4
    %button.btn.btn-warning.btn-sm Edit
    %button.btn.btn-danger.btn-sm.delete_button{data: {url: course_path(course)} } Delete
